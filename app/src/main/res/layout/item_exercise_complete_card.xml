<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/exercise_icon_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/exercise_icon_v1_0" />

        <TextView
            android:id="@+id/exercise_name_text_view"
            style="@style/BlackTextSubheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/exercise_icon_image_view"
            android:layout_marginLeft="72dp"
            android:text="Exercise name"
            android:textColor="@color/textBlackHint" />

        <TextView
            android:id="@+id/completed_sets_text_view"
            style="@style/BlackTextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exercise_icon_image_view"
            android:layout_alignStart="@+id/exercise_name_text_view"
            android:text="0"
            android:textColor="@color/textBlackHint" />

        <TextView
            android:id="@+id/text_view_4"
            style="@style/BlackTextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/textBlackHint"
            android:layout_alignTop="@+id/completed_sets_text_view"
            android:layout_toEndOf="@+id/completed_sets_text_view" />

        <TextView
            android:id="@+id/total_sets_text_view"
            style="@style/BlackTextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/textBlackHint"
            android:layout_alignTop="@+id/sets_text_view"
            android:layout_toEndOf="@+id/text_view_4" />

        <TextView
            android:id="@+id/sets_text_view"
            style="@style/BlackTextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sets completed"
            android:textColor="@color/textBlackHint"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/text_view_4"
            android:layout_toEndOf="@+id/total_sets_text_view" />


    </RelativeLayout>

</android.support.v7.widget.CardView>