<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/accept_image_view"
        android:layout_toStartOf="@+id/cancel_button">

        <EditText
            android:id="@+id/workout_name_edit_text"
            style="@style/WhiteTextAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/textWhiteHint"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:text="placeholder" />

    </RelativeLayout>

    <Button
        android:id="@+id/cancel_button"
        style="@style/WhiteTextSubheading"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@color/caldroid_transparent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="CANCEL" />

    <ImageView
        android:id="@+id/accept_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_done_white_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>