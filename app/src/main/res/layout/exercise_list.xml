<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="14dp"
        android:adjustViewBounds="false"
        android:src="@drawable/exercise_icon_v1_0" />

    <TextView
        android:id="@+id/exercise_name_text_view"
        style="@style/BlackTextSubheading"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_image_view"
        android:layout_toEndOf="@+id/icon_image_view"
        android:maxLines="1"
        android:text="Exercise Name Placeholder"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/muscle_group_text_view"
        style="@style/BlackTextBodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_image_view"
        android:layout_alignStart="@+id/exercise_name_text_view"
        android:text="Muscle Group"
        android:layout_marginBottom="2dp" />


</RelativeLayout>