<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/cardWhite">

    <TextView
        android:id="@+id/day_of_week_text_view"
        style="@style/BlackTextBodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="ABC" />

    <TextView
        android:id="@+id/workout_name_textview"
        style="@style/BlackTextSubheading"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Workout Name Placeholder" />

    <ImageView
        android:id="@+id/remove_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_remove_circle_outline_grey_lighter_48dp" />
</RelativeLayout>
